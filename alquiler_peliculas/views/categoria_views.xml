<odoo>
    <record id="view_categoria_form" model="ir.ui.view">
        <field name="name">alquiler.categoria.form</field>
        <field name="model">alquiler.categoria</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="pelicula_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_categoria_tree" model="ir.ui.view">
        <field name="name">alquiler.categoria.tree</field>
        <field name="model">alquiler.categoria</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>